<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.csu.mypetstore.persistence.AccountDAO">

    <resultMap id="accountMap" type="Account">
        <result column="userid" property="username"></result>
    </resultMap>

    <select id="findByUsername" parameterType="Account" resultMap="accountMap">
        select * from account where userid=#{username};
    </select>
</mapper>